<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="#d9ecff"
                />
            <stroke
                android:color="@color/horizontalOptionChosenColor"
                android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="#fff"
                />
            <stroke
                android:color="@color/horizontalOptionChosenColor"
                android:width="1dp"/>
        </shape>
    </item>
</selector>