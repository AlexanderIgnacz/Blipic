<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <!--Header-->
    <include layout="@layout/fragment_header"/>

    <!--Content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/footerColor"
            >
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:paddingLeft="15dp"
            android:background="@drawable/settings_field_background"
            >
            <TextView
                android:text="Version"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                >
            </TextView>

            <TextView
                android:text="1.0"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:alpha="0.5"
                >
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:background="@color/footerColor"
            >
            <TextView
                android:text="LOOKING FOR HELP?"
                style="@style/My_TextView"
                android:textColor="#434343"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/footer_text"
                >
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:paddingLeft="15dp"
            android:background="@drawable/settings_field_background"
            >
            <TextView
                android:text="Support"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                >
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shr_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:background="@color/footerColor"
            >
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <RelativeLayout
            android:id="@+id/settings_btn_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:paddingLeft="15dp"
            android:background="@drawable/settings_field_background"
            >
            <TextView
                android:text="License Agreement"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                >
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shr_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            android:layout_marginLeft="15dp"
            >
        </View>
        <RelativeLayout
            android:id="@+id/settings_btn_terms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:paddingLeft="15dp"
            android:background="@drawable/settings_field_background"
            >
            <TextView
                android:text="Terms of service"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                >
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shr_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            android:layout_marginLeft="15dp"
            >
        </View>
        <RelativeLayout
            android:id="@+id/settings_btn_pp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:paddingLeft="15dp"
            android:background="@drawable/settings_field_background"
            >
            <TextView
                android:text="Privacy Policy"
                style="@style/My_TextView"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cell_text"
                >
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shr_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/iosDivider"
            >
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/footerColor"
            >

        </View>
    </LinearLayout>
</LinearLayout>
