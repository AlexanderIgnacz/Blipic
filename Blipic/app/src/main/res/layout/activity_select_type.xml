<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/categories_x2"
        />

    <ImageView
        android:id="@+id/select_type_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/wall_mountain_x2"
        android:visibility="gone"
        android:alpha="0"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVITIES"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_type_category_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.trekr.Blipic.Controllers.HomeMap.Components.CategoryView
            android:id="@+id/select_type_category"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
        </com.trekr.Blipic.Controllers.HomeMap.Components.CategoryView>
        <com.trekr.Blipic.Controllers.HomeMap.Components.SubCategoryView
            android:id="@+id/subCategoriesView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/select_type_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/camera_image_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
