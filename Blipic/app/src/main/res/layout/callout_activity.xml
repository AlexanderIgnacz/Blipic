<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="@dimen/callout_width"
        android:layout_height="@dimen/callout_height"
        android:padding="10dp"
        android:background="#03A1D4">

        <com.trekr.Utils.TapOpacityHighlightLayout
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-10dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cll_bn_close" />
        </com.trekr.Utils.TapOpacityHighlightLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/pictureImageView"
                        android:layout_width="99dp"
                        android:layout_height="86dp"
                        android:src="@drawable/cll_no_media_placeholder"
                        android:background="#fff"
                        android:padding="3dp"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titleLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="11dp"
                            android:lines="2"
                            android:ellipsize="end"
                            android:textSize="@dimen/ios_font_15"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:text="James asd aasaa f s s adfsadfasdfasdfdsa" />

                        <TextView
                            android:id="@+id/descriptionLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:lines="3"
                            android:ellipsize="end"
                            android:textSize="@dimen/ios_font_12"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:text="James James James James James asdfsadfsdfasdfasdfasdfasdf" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp">
                        <com.trekr.Utils.TapOpacityHighlightLayout
                            android:id="@+id/likeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                style="@style/My_ImageView"
                                android:id="@+id/imgLike"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/bn_dislike" />
                        </com.trekr.Utils.TapOpacityHighlightLayout>

                        <com.trekr.Utils.TapOpacityHighlightLayout
                            android:id="@+id/attendingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp">
                            <ImageView
                                style="@style/My_ImageView"
                                android:id="@+id/imgAttending"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@drawable/favorite_no" />
                        </com.trekr.Utils.TapOpacityHighlightLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.trekr.Utils.TapOpacityHighlightLayout
                            android:id="@+id/btnDetails"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="7dp">
                            <ImageView
                                style="@style/My_ImageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cll_bn_details" />
                        </com.trekr.Utils.TapOpacityHighlightLayout>

                        <com.trekr.Utils.TapOpacityHighlightLayout
                            android:id="@+id/btnComments"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <ImageView
                                style="@style/My_ImageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cll_bn_comments" />
                        </com.trekr.Utils.TapOpacityHighlightLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#225B78"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/My_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ios_font_10"
                        android:text="ACTIVITIES"
                        android:textColor="@color/activity_text"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/activityTypeImageView"
                                android:layout_width="@dimen/activity_size"
                                android:layout_height="match_parent"
                                android:src="@drawable/act_white_atv"/>
                        </RelativeLayout>


                        <com.trekr.Utils.TapOpacityHighlightLayout
                            android:id="@+id/btnGo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/My_TextView"
                                android:id="@+id/txtGo"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:textAlignment="textStart"
                                android:textStyle="bold"
                                android:textSize="@dimen/ios_font_15"
                                android:paddingLeft="13dp"
                                android:paddingRight="13dp"
                                android:background="@drawable/round_button_go"
                                android:text="GO!"
                                android:drawableRight="@drawable/cll_arrow" />
                        </com.trekr.Utils.TapOpacityHighlightLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/My_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/activity_text"
                        android:textSize="@dimen/ios_font_10"
                        android:text="JOIN FRIENDS THAT LIKE THIS" />

                    <com.trekr.Utils.TapOpacityHighlightLayout
                        android:id="@+id/friendsGoingButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/My_TextView"
                            android:id="@+id/txt_friendsGoing"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/ios_font_14"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:text="Be the first to check it out"
                            android:drawableRight="@drawable/cll_arrow" />
                    </com.trekr.Utils.TapOpacityHighlightLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/My_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/activity_text"
                        android:textSize="@dimen/ios_font_10"
                        android:text="CREATED BY" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/hostedByImageView"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/image360"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#fff"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp">
                            <TextView
                                style="@style/My_TextView"
                                android:id="@+id/hostedByButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="textStart"
                                android:textColor="#fff"
                                android:text="Anna Chos" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/warnning"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>