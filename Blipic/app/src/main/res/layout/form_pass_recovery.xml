<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_login_button"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="@string/txt_recover_password" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            style="@style/My_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/field_email"
            android:adjustViewBounds="true" />

        <EditText
            android:id="@+id/txt_recover_pass_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="@string/hint_email" />

    </RelativeLayout>

    <com.trekr.Utils.TapOpacityHighlightLayout
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            style="@style/My_ImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_login_button"
            android:src="@drawable/bn_send"
            android:gravity="center" />
    </com.trekr.Utils.TapOpacityHighlightLayout>

</LinearLayout>