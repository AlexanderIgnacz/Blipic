<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.trekr.Utils.TapOpacityHighlightLayout
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/My_ImageView"
            android:layout_width="@dimen/width_login_button"
            android:layout_height="@dimen/height_login_button"
            android:src="@drawable/bn_login"
            android:adjustViewBounds="true"
            android:gravity="center" />
    </com.trekr.Utils.TapOpacityHighlightLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="13dp"
            android:background="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_or"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:background="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:gravity="center"
        android:text="@string/btn_create_an_account"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="?android:selectableItemBackground"
        android:clickable="true" />
</LinearLayout>